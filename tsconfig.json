{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "lib": ["DOM", "ES2017", "ES2019", "WebWorker"],
    "baseUrl": ".",
    "paths": {
      "$controllers/*": ["src/components/controllers/*"]
    },
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "src/node_modules/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "static/*"],
}
